{
  "name": "nodejs-exercise",
  "version": "1.0.0",
  "description": "NodeJS coding exercise",
  "main": "index.js",
  "scripts": {
    "prettier": "prettier --config .prettierrc src/**/*.ts --write",
    "lint": "npx eslint --fix \"{src,apps,libs,test}/**/*.ts\" -c .eslintrc.js",
    "test:format": "yarn run prettier && yarn run lint",
    "prebuild": "rm -rf /dist",
    "test": "jest --verbose --runInBand --useStderr --forceExit",
    "build": "babel ./src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "prestart": "yarn run test:format",
    "start": "yarn run build && node dist/start.js",
    "tsnode": "ts-node-dev -r tsconfig-paths/register --exit-child --transpile-only --ignore-watch node_modules --respawn ./src/start.ts",
    "dev": "nodemon --watch 'src/**' --ext 'ts,json' --ignore '**/*.spec.ts' --exec \"yarn run test:format && yarn run tsnode\""
  },
  "prepare": "husky install",
  "author": "Pablo Blanco",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/core": "^7.18.6",
    "@babel/node": "^7.18.6",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@cucumber/cucumber": "^8.4.0",
    "@types/bson": "^4.0.5",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "0.0.37",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.43",
    "@types/cucumber": "^6.0.1",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.8",
    "@types/glob": "^7.1.4",
    "@types/helmet": "0.0.48",
    "@types/is-empty": "^1.2.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@types/nunjucks": "^3.2.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "nodemon": "^2.0.18",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4",
    "tsconfig-paths": "^3.9.0",
    "supertest": "^6.1.1"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "axios": "^0.21.4",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-promise-router": "^4.1.1",
    "glob": "^8.0.3",
    "helmet": "^5.1.1",
    "http-status": "^1.5.2",
    "joi": "^17.6.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0"
  }
}
